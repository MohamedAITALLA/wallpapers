<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/custom_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/custom_icon"
        android:hint="Title"/>

    <TextView
        android:id="@+id/custom_desc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/custom_icon"
        android:layout_below="@id/custom_title"
        android:hint="Desc"/>

    <com.mbridge.msdk.nativex.view.MBMediaView
        android:id="@+id/custom_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/custom_icon"
        android:background="@color/white"/>

    <com.mbridge.msdk.widget.MBAdChoice
        android:id="@+id/custom_choice"
        android:layout_width="match_parent"
        android:layout_below="@id/custom_media"
        android:layout_height="50dp" />

</RelativeLayout>
